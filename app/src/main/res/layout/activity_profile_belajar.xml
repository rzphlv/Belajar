<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".Adapter.ProfileBelajar">

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/judulbangun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:text="Aplikasi Belajar"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        android:layout_below="@id/judulbangun">
        <TextView
            android:id="@+id/judulbangun1"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/judulbangun2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text" />

        <ImageView
            android:id="@+id/playsuara"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/playbutton"/>

        <ImageView
            android:id="@+id/gambarbangun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>